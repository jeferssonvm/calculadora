mixin header-content()
    header.header
        h1.header__title  calc 
        div.header__edit-color
            h2.edit-color_subtitle Theme
            form.edit-color__form(action="#")
                input.edit-color__select(type="radio" name="select-color" value="firt-color")
                input.edit-color__select(type="radio" name="select-color" value="second-color")
                input.edit-color__select(type="radio" name="select-color" value="third-color")



